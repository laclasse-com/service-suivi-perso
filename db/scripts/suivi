CREATE  TABLE IF NOT EXISTS `suivi`.`rights` (
  `id` INT(11) NOT NULL AUTO_INCREMENT ,
  `uid` VARCHAR(8) NOT NULL ,
  `read` BINARY NULL DEFAULT 0 ,
  `write` BINARY NULL DEFAULT 0 ,
  `carnets_id` BIGINT(20) NOT NULL ,
  PRIMARY KEY (`id`, `carnets_id`) ,
  UNIQUE INDEX `id_UNIQUE` (`id` ASC) ,
  UNIQUE INDEX `uid_UNIQUE` (`uid` ASC) ,
  INDEX `fk_rigths_carnets1_idx` (`carnets_id` ASC) ,
  CONSTRAINT `fk_rigths_carnets1`
    FOREIGN KEY (`carnets_id` )
    REFERENCES `suivi`.`carnets` (`id` )
    ON DELETE NO ACTION
    ON UPDATE NO ACTION)
ENGINE = InnoDB
DEFAULT CHARACTER SET = utf8;

DROP TABLE IF EXISTS `suivi`.`rigths` ;


